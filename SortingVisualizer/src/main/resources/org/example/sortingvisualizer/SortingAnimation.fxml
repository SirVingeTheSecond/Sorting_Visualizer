<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:controller="org.example.sortingvisualizer.SortingAnimationController" xmlns:fx="http://javafx.com/fxml" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21.0.1">
  <center>
    <BarChart fx:id="barChart" animated="false">
      <xAxis>
        <CategoryAxis fx:id="xAxis"/>
      </xAxis>
      <yAxis>
        <NumberAxis fx:id="yAxis"/>
      </yAxis>
    </BarChart>
  </center>
  <bottom>
    <Button text="Sort" onAction="#sort"/>
  </bottom>
</BorderPane>

