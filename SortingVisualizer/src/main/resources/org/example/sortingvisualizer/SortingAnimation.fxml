<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.sortingvisualizer.SortingAnimationController" prefWidth="800" prefHeight="600" styleClass="main-container">

  <!-- Top Area -->
  <top>
    <HBox spacing="20" alignment="CENTER" styleClass="top-container">
      <VBox spacing="10">
        <HBox spacing="10" alignment="CENTER">
          <Button fx:id="startButton" text="Start" onAction="#startSorting" styleClass="action-button"/>
          <Button fx:id="stopButton" text="Stop" onAction="#stopSorting" styleClass="action-button"/>
          <Button fx:id="resetButton" text="Reset" onAction="#resetArray" styleClass="action-button"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER">
          <Label text="Speed:" styleClass="label-text"/>
          <Slider fx:id="speedSlider" min="1" max="100" value="50" styleClass="slider"/>
        </HBox>
      </VBox>
      <VBox spacing="10">
        <HBox spacing="10" alignment="CENTER">
          <Label text="Algorithm:" styleClass="label-text"/>
          <ChoiceBox fx:id="algorithmChoice" prefWidth="150" styleClass="choice-box"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER">
          <Label text="Array Size:" styleClass="label-text"/>
          <Slider fx:id="arraySizeSlider" min="10" max="100" value="50" styleClass="slider"/>
        </HBox>
      </VBox>
    </HBox>
  </top>

  <!-- Center Area -->
  <center>
    <VBox alignment="CENTER" styleClass="center-container">
      <BarChart fx:id="barChart" prefWidth="600" prefHeight="400" styleClass="bar-chart">
        <xAxis>
          <CategoryAxis fx:id="categoryAxis" label="Index"/>
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="numberAxis" label="Value"/>
        </yAxis>
      </BarChart>
    </VBox>
  </center>

  <!-- Bottom Area -->
  <bottom>
    <HBox spacing="10" alignment="CENTER" styleClass="bottom-container">
      <VBox spacing="5">
        <Label fx:id="algorithmLabel" text="Algorithm:" styleClass="label-text"/>
        <Label fx:id="arraySizeLabel" text="Array Size:" styleClass="label-text"/>
      </VBox>
      <VBox spacing="5">
        <Label fx:id="sortingTimeLabel" text="Sorting Time:" styleClass="label-text"/>
        <Label fx:id="comparisonLabel" text="Comparisons:" styleClass="label-text"/>
        <Label fx:id="swapLabel" text="Swaps:" styleClass="label-text"/>
      </VBox>
    </HBox>
  </bottom>

</BorderPane>
