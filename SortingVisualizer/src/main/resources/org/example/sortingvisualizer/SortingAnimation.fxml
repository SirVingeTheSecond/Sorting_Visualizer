<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.sortingvisualizer.SortingAnimationController">
  <BarChart fx:id="barChart" animated="false">
    <xAxis>
      <CategoryAxis label="Index" />
    </xAxis>
    <yAxis>
      <NumberAxis label="Value" />
    </yAxis>
  </BarChart>
  <Button text="Sort" onAction="#handleSortButtonAction"/>
</VBox>